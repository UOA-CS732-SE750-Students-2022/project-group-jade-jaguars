{
  "name": "backend",
  "description": "",
  "version": "0.0.0",
  "private": true,
  "license": "GPL-3.0",
  "main": "src/app.ts",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "tsc",
    "start": "ts-node ./src/app.ts",
    "start:dev": "nodemon",
    "start:prod": "node dist/app",
    "test": "cross-env NODE_ENV=testing jest --run-in-band",
    "coverage": "cross-env NODE_ENV=testing nyc npm run test"
  },
  "dependencies": {
    "@types/joi": "^17.2.3",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "http-status-codes": "^2.2.0",
    "joi": "^17.6.0",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^6.2.8",
    "querystring": "^0.2.1",
    "rimraf": "^3.0.2",
    "swagger-jsdoc": "^6.1.0",
    "swagger-ui-express": "^4.3.0",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.6",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.4.1",
    "@types/mongodb-memory-server": "^2.3.0",
    "@types/node": "^17.0.21",
    "@types/nodemon": "^1.19.1",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^27.5.1",
    "mongodb-memory-server": "^8.4.2",
    "nodemon": "^2.0.15",
    "nyc": "^15.1.0",
    "prettier": "^2.3.2",
    "supertest": "^6.2.2",
    "ts-jest": "^27.1.4",
    "ts-node": "^10.7.0",
    "tsconfig-paths": "^3.10.1",
    "typescript": "^4.6.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.test\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.ts"
    ]
  },
  "nyc": {
    "extension": [
      ".ts"
    ],
    "exclude": [
      "**/*.d.ts"
    ],
    "reporter": [
      "html"
    ],
    "all": true
  }
}
